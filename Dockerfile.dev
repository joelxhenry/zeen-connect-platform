# =============================================================================
# Development Dockerfile - Live reload with Vite HMR
# =============================================================================
FROM php:8.4-cli-alpine

# Install system dependencies
RUN apk add --no-cache \
    nodejs \
    npm \
    git \
    unzip \
    curl \
    nginx \
    supervisor \
    libpng \
    libjpeg-turbo \
    libwebp \
    freetype \
    libzip \
    icu-libs \
    oniguruma \
    postgresql-libs \
    sqlite-libs

# Install PHP extension build dependencies and compile extensions
RUN apk add --no-cache --virtual .build-deps \
    libpng-dev \
    libjpeg-turbo-dev \
    libwebp-dev \
    freetype-dev \
    libzip-dev \
    icu-dev \
    oniguruma-dev \
    postgresql-dev \
    sqlite-dev \
    linux-headers \
    $PHPIZE_DEPS \
    && docker-php-ext-configure gd \
        --with-freetype \
        --with-jpeg \
        --with-webp \
    && docker-php-ext-install -j$(nproc) \
        pdo_mysql \
        pdo_pgsql \
        pdo_sqlite \
        gd \
        exif \
        zip \
        intl \
        pcntl \
        bcmath \
        mbstring \
    && pecl install redis \
    && docker-php-ext-enable redis \
    && apk del .build-deps

# Install Composer
COPY --from=composer:2 /usr/bin/composer /usr/bin/composer

# Set working directory
WORKDIR /var/www/html

# Copy nginx dev configuration
COPY docker/nginx.dev.conf /etc/nginx/http.d/default.conf

# Copy supervisord dev configuration
COPY docker/supervisord.dev.conf /etc/supervisor/conf.d/supervisord.conf

# Copy PHP dev configuration
COPY docker/php.dev.ini /usr/local/etc/php/conf.d/app.ini

# Create necessary directories
RUN mkdir -p /var/log/supervisor \
    && mkdir -p /run/nginx

# Expose ports
# 80 - Nginx (proxies to Laravel + Vite)
EXPOSE 80

# Start supervisord
CMD ["/usr/bin/supervisord", "-c", "/etc/supervisor/conf.d/supervisord.conf"]
