# Zeen Connect - VPS Development Environment
# Copy this file to .env and update with your values

# Application
APP_NAME=Zeen
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=https://dev.zeenconnect.com

# Domain Configuration (replace with your domains)
APP_DOMAIN=dev.zeenconnect.com
ADMIN_DOMAIN=admin.dev.zeenconnect.com
CONSOLE_DOMAIN=console.dev.zeenconnect.com
AUTH_DOMAIN=auth.dev.zeenconnect.com
PAYMENTS_DOMAIN=payments.dev.zeenconnect.com

# Session domain - shared across all subdomains except admin
# Admin uses isolated sessions (configured in Laravel session config)
SESSION_DOMAIN=.dev.zeenconnect.com

# Vite HMR (Critical for remote development)
# For HTTPS with Caddy - use your domain
VITE_HMR_HOST=https://dev.zeenconnect.com
VITE_DEV_SERVER_URL=https://dev.zeenconnect.com

# Database (Docker service hostname)
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=zeen
DB_USERNAME=zeen
DB_PASSWORD=your_secure_password_here
DB_ROOT_PASSWORD=your_root_password_here

# Redis (Docker service hostname)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=null
REDIS_CLIENT=phpredis

# Cache & Session (use Redis for performance)
CACHE_STORE=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=debug

# Mail (update for production)
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS S3 (optional - for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Sentry (optional - for error tracking)
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1

# OAuth Providers (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
APPLE_CLIENT_ID=
APPLE_CLIENT_SECRET=
APPLE_REDIRECT_URL="${APP_URL}/auth/callback/apple"
